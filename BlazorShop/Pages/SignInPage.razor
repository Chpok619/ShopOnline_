@page "/SignInPage"
@using HttpApiClient

@inject ApiClient _apiClient

<h3>Login</h3>


<form hidden="@IsSignIn">
    Login: <input type="text" name="login" @bind="Login"/>
    Password: <input type="text" name="password" @bind="Password"/>

    <input type="submit" name="signin" @onclick="SignIn" value="Sign In"/>
</form>

@if (IsSignIn)
{
    <p style="font-size: 30px"><b>Sign In</b></p>
}

@code {
    private string? Login { get; set; }
    private string? Password { get; set; }
    
    private bool IsSignIn = false;

    private async Task SignIn()
    {
        await _apiClient.SignIn(Login, Password);

        IsSignIn = true;
    }
}